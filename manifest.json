{
	"manifest_version" : 2,
	"name":"#Remembering",
	"version": "1.0.0",
	"description": "북마크 앱임",
	"sidebar_action": {
		"default_page" : "sidebar.html",
		"default_icon" : { 
			"16" : "icons/icon_active16.png",
			"32" : "icons/icon_active32.png" 
		},
		"use_navigation_bar": false,
		"default_title": "#Remembering"	
	},
	"background": {
		"scripts" : ["background.js"]	
	}, 
	"content_scripts": [
		{
			"matches" : ["https://search.naver.com/*", "https://www.google.com/*", "https://www.google.co.kr/*"],
			"run_at" : "document_end",
			"js" : ["contentsScript.js"]
		}
	],
	
	"permissions": [
		"tabs",
		"storage"
	]
}
